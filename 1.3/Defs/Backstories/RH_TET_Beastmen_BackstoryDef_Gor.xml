    <bodyTypeFemale>Female</bodyTypeFemale>
	
    <forcedHediffs>
      <li>RH_TET_Beastmen_BestigorHornLeft</li>
      <li>RH_TET_Beastmen_BestigorHornRight</li>
    </forcedHediffs>

    <slot>Adulthood</slot>
    <skillGains>
      <li>
        <defName>Melee</defName>
        <amount>5</amount>
      </li>
      <li>
        <defName>Shooting</defName>
        <amount>3</amount>
      </li>
      <li>
        <defName>Animals</defName>
        <amount>5</amount>

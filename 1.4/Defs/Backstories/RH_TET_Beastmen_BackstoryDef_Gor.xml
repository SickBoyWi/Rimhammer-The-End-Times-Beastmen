		<skillGains>
			<li>
				<key>Melee</key>
				<value>5</value>
			</li>
			<li>
				<key>Shooting</key>
				<value>3</value>
			</li>
			<li>
				<key>Animals</key>
				<value>5</value>
			</li>
		</skillGains>
		<spawnCategories>
			<li>RH_TET_Beastmen_Bestigor</li>
		</spawnCategories>

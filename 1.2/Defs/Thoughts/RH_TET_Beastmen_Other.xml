<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThoughtDef>
		<defName>RH_TET_Beastmen_PitFightWinner</defName>
		<durationDays>3.0</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>won pit fight</label>
				<description>I was victorious in a pit fight.</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>RH_TET_Beastmen_PitFightLoser</defName>
		<durationDays>3.0</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>lost pit fight</label>
				<description>I was defeated in a pit fight.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>RH_TET_Beastmen_WatchedPitFight</defName>
		<durationDays>3.0</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>watched pit fight</label>
				<description>I saw a pit fight.</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

  <ThoughtDef>
    <defName>RH_TET_Beastmen_ListeningToDrum</defName>
    <workerClass>TheEndTimes_Beastmen.ThoughtWorker_ListeningToDrum</workerClass>
    <stages>
      <li>
        <label>listening to drum</label>
        <description>The drum stirs my bestial urgres.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>RH_TET_Beastmen_PsychicEmanatorSoothe</defName>
    <workerClass>TheEndTimes_Beastmen.ThoughtWorker_PsychicEmanatorSoothe</workerClass>
    <effectMultiplyingStat>PsychicSensitivity</effectMultiplyingStat>
    <stages>
      <li>
        <label>psychic monument soothe</label>
        <description>The psychic monument makes me good. The presence of chaos can be felt strongly here.</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
 
  <ThoughtDef>
    <defName>RH_TET_Beastmen_FinalDestructionDefeat</defName>
    <stackLimit>1</stackLimit>
    <durationDays>60</durationDays>
    <stages>
      <li>
        <label>failed to destroy humams</label>
        <description>We failed to destroy the last human bastion. Surely the dark gods are angry at our failure.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>RH_TET_Beastmen_FightingFinalBattle</defName>
    <stackLimit>1</stackLimit>
    <durationDays>3</durationDays>
    <stages>
      <li>
        <label>fighting final battle</label>
        <description>We are fighting to destroy the forces of Order!</description>
        <baseMoodEffect>25</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>RH_TET_Beastmen_DestroyedFinalOrder</defName>
    <stackLimit>1</stackLimit>
    <durationDays>60</durationDays>
    <stages>
      <li>
        <label>Destroyed forces of Order</label>
        <description>We destroyed the last major bastion of the forces of order.</description>
        <baseMoodEffect>24</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>

<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<TaleDef>
		<defName>RH_TET_Beastmen_BurnedAtMassiveHerdstone</defName>
		<label>burned at massive herdstone</label>
		<taleClass>Tale_DoublePawn</taleClass>
		<type>Volatile</type>
		<baseInterest>5</baseInterest>
		<firstPawnSymbol>CARRIER</firstPawnSymbol>
		<secondPawnSymbol>SLEEPER</secondPawnSymbol>
		<rulePack>
			<rulesStrings>
				<li>tale_noun->[CARRIER_nameDef] burned [SLEEPER_nameDef] at massive herdstone</li>
				<li>image->[CARRIER_nameFull] placing [SLEEPER_nameDef] inside massive herdstone fire hole [circumstance_group]</li>
				<li>image->[CARRIER_nameFull] lifting [SLEEPER_nameDef] to the massive herdstone burn hole [circumstance_group]</li>
				<li>image->[CARRIER_nameFull] stuffing [SLEEPER_nameDef] inside the massive herdstone burn hole [circumstance_group]</li>
				<li>image->[CARRIER_nameFull] walking away as [SLEEPER_nameDef] burns in the massive herdstone [circumstance_group]</li>
				<li>circumstance_phrase(p=3)->with a [AdjectiveAny] expression</li>
				<li>circumstance_phrase->while consumed in thought</li>
				<li>circumstance_phrase->while gazing at a faraway [TerrainFeature]</li>
				<li>circumstance_phrase->with visible strain</li>
				<li>desc_sentence->[Quantity_adjphrase] [Animal]s rest near the scene.</li>
				<li>desc_sentence->[Quantity_adjphrase] [Enemy]s approach the area.</li>
				<li>desc_sentence->[CARRIER_nameDef] radiates determination.</li>
				<li>desc_sentence->[SLEEPER_nameDef] is visibly mutilated.</li>
				<li>desc_sentence->[SLEEPER_nameDef] stares empty eyed.</li>
				<li>desc_sentence->[Quantity_adjphrase] stared at raining corpse ash.</li>
			</rulesStrings>
		</rulePack>
	</TaleDef>

	<TaleDef>
		<defName>RH_TET_MadeSacrifice</defName>
		<label>made a sacrifice</label>
		<taleClass>Tale_SinglePawn</taleClass>
		<type>Expirable</type>
		<baseInterest>0.7</baseInterest>
		<maxPerPawn>1</maxPerPawn>
		<expireDays>3</expireDays>
		<rulePack>
			<rulesStrings>
				<li>tale_noun->[pawn_nameShortDef] made a sacrifice</li>
				<li>image->[pawn_nameFull] stood at the herdstone to make a sacrifice [circumstance_group]</li>
				<li>circumstance_phrase->with glowing eyes</li>
				<li>circumstance_phrase->while braying</li>
				<li>desc_sentence->[pawn_pronoun] foresaw the end times.</li>
				<li>desc_sentence->[pawn_possessive] eyes wide, as the blade descended toward [pawn_objective].</li>
				<li>desc_sentence->[pawn_pronoun] was smiled upon by a dark god.</li>
			</rulesStrings>
		</rulePack>
	</TaleDef>

	<TaleDef>
		<defName>RH_TET_MadeConversion</defName>
		<label>converted pawn to chaos</label>
		<taleClass>Tale_SinglePawn</taleClass>
		<type>Expirable</type>
		<baseInterest>0.7</baseInterest>
		<maxPerPawn>1</maxPerPawn>
		<expireDays>3</expireDays>
		<rulePack>
			<rulesStrings>
				<li>tale_noun->[pawn_nameShortDef] made a conversion</li>
				<li>image->[pawn_nameFull] stood at the herdstone to make a chaos conversion [circumstance_group]</li>
				<li>circumstance_phrase->with glowing eyes</li>
				<li>circumstance_phrase->while braying</li>
				<li>desc_sentence->[pawn_pronoun] foresaw the end times.</li>
				<li>desc_sentence->[pawn_possessive] eyes wide, as the dark power descended toward [pawn_objective].</li>
				<li>desc_sentence->[pawn_pronoun] was smiled upon by a dark god.</li>
			</rulesStrings>
		</rulePack>
	</TaleDef>
 
	<TaleDef>
		<defName>RH_TET_Beastmen_ConvertedPrisoner</defName>
		<label>prisoner converted</label>
		<taleClass>Tale_DoublePawn</taleClass>
		<type>Expirable</type>
		<firstPawnSymbol>EXECUTIONER</firstPawnSymbol>
		<secondPawnSymbol>PRISONER</secondPawnSymbol>
		<baseInterest>4</baseInterest>
		<maxPerPawn>1</maxPerPawn>
		<expireDays>20</expireDays>
		<rulePack>
			<rulesStrings>
				<li>tale_noun->[executioner] converting [PRISONER_nameDef]</li>
				<li>tale_noun->[PRISONER_nameDef] being converted by [EXECUTIONER_nameDef]</li>
				<li>tale_noun->the conversion of [PRISONER_nameDef]</li>
				<li>image->[EXECUTIONER_nameFull] converting [PRISONER_nameFull] [circumstance_group]</li>
				<li>image->[EXECUTIONER_nameFull] holding [PRISONER_nameFull] [circumstance_group]</li>
				<li>image->[EXECUTIONER_nameFull] preparing to convert [PRISONER_nameFull] [circumstance_group]</li>
				<li>image->[EXECUTIONER_nameFull] entering a prison cell, going to convert [PRISONER_nameFull] [circumstance_group]</li>
				<li>circumstance_phrase->as [PRISONER_pronoun] writhes on the ground</li>
				<li>circumstance_phrase->as [PRISONER_pronoun] twists in pain</li>
				<li>circumstance_phrase->as [PRISONER_pronoun] cries out in terror</li>
				<li>circumstance_phrase->with professional efficiency</li>
				<li>circumstance_phrase->roughly and amateurishly</li>
				<li>circumstance_phrase->with obviously excessive force</li>
				<li>circumstance_phrase->with obvious pleasure</li>
				<li>circumstance_phrase->while smiling with dominance</li>
				<li>circumstance_phrase->with tears in [EXECUTIONER_possessive] eyes</li>
				<li>circumstance_phrase->with a look of utter indifference</li>
				<li>circumstance_phrase->while inflicting unnecessary pain</li>
				<li>circumstance_phrase->while thinking of something else</li>
				<li>circumstance_phrase->for the greater good</li>
				<li>desc_sentence->[EXECUTIONER_nameDef] is sweating profusely.</li>
				<li>desc_sentence->[EXECUTIONER_nameDef] is drooling a little bit.</li>
				<li>desc_sentence->[EXECUTIONER_nameDef] has blood smeared on [EXECUTIONER_possessive] face.</li>
				<li>desc_sentence->[PRISONER_nameDef] is shaking and writhing.</li>
				<li>desc_sentence->[PRISONER_nameDef] seems to have given up entirely.</li>
				<li>desc_sentence->[PRISONER_nameDef] has closed [PRISONER_possessive] eyes, seeming to pray to a higher power.</li>
				<li>desc_sentence->[PRISONER_nameDef] looks defiant.</li>
			</rulesStrings>
		</rulePack>
	</TaleDef>
  
	<TaleDef>
		<defName>RH_TET_Beastmen_FinalDestructionVictory</defName>
		<label>final destruction victory</label>
		<taleClass>Tale_SinglePawn</taleClass>
		<type>Volatile</type>
		<baseInterest>50</baseInterest>
		<rulePack>
			<rulesStrings>
				<li>tale_noun->[PAWN_nameDef]'s herd smahing an Empire solider</li>
				<li>image->[PAWN_nameFull] running towards a [Enemy], [circumstance_group]</li>
				<li>image->[PAWN_nameFull] wielding a [Weapon], [circumstance_group]</li>
				<li>image->[PAWN_nameFull] swinging a [Weapon], [circumstance_group]</li>
				<li>image->[PAWN_nameFull] standing as tall as a herdstone, [circumstance_group]</li>
				<li>circumstance_phrase->wearing a [AdjectiveBadass] look in [PAWN_possessive] eyes</li>
				<li>circumstance_phrase->wearing a [AdjectiveAngsty] look in [PAWN_possessive] eyes</li>
				<li>circumstance_phrase->roaring in victory</li>
				<li>circumstance_phrase->covered in [Gore]</li>
				<li>desc_sentence->[Quantity_adjphrase] [Enemy]s cower from the assault.</li>
				<li>desc_sentence->[Quantity_adjphrase] [Enemy]s flee the area.</li>
				<li>desc_sentence->[Quantity_adjphrase] [Enemy]s are visibly wounded.</li>
				<li>desc_sentence->A [Community] burns in the distance.</li>
				<li>desc_sentence->A [Community] smokes in the distance.</li>
				<li>desc_sentence->The ground is coated in [Gore].</li>
				<li>desc_sentence->[Quantity_adjphrase] [PersonJob]s flee the area.</li>
				<li>desc_sentence->[Quantity_adjphrase] [Animal]s flee the area.</li>
			</rulesStrings>
		</rulePack>
	</TaleDef>
  
</Defs>